<?xml version="1.0" encoding="utf-8" ?>
<window xmlns="http://tempuri.org/Markup.xsd" title="Test App">
  <stack flow="horizontal" name="stack1" width="5em" height="4em" items-align="stretch">
    <button name="button1" text="Click me" icon="icon-16-white.svg"/>
    <button name="button2" text="Button 2"/>
  </stack>
  <view name="view1">
    <stack flow="horizontal" items-align="center" content-align="center" name="stack2">
      <button name="button3" text="Button3" height="4em"/>
      <button name="button4" icon="icon-16-white.svg"/>
    </stack>
    <view name="view2"/>
  </view>
  <stack flow="horizontal" items-align="center" content-align="start" name="stack3" wrapping="wrap">
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
    <button text="Button" icon="icon-16-white.svg"/>
  </stack>
  <label text="{name}" name="label1" height="4em"/>
  <textbox text="{city.name}" name="textbox1"/>
  <stack flow="horizontal" context="{city}" name="stack_ctx">
    <textbox context="{country}" text="{name}" name="textbox2"/>
  </stack>
  <textbox text="{city.country.name}" name="textbox3" notify-on-keydown="true"/>
  <stack flow="horizontal">
    <label text="Label"/>
    <textbox width="10em" text="{books[0].pages}" name="tb_0_pages"/>
    <button text="Button"/>
  </stack>
  <textbox width="10em" text="{books[1].pages}" notify-on-keydown="true" name="tb_1_pages_1"/>
  <textbox width="10em" text="{books[1].pages}" notify-on-keydown="true" name="tb_1_pages_2"/>
  <list flow="vertical" name="list1" items="{books}">
    <stack flow="horizontal">
      <label text="book"/>
      <textbox text="{pages}"/>
    </stack>
  </list>
  <list flow="vertical" name="list2" items="{numbers}">
    <stack flow="horizontal">
      <label text="number"/>
      <textbox text="{}"/>
    </stack>
  </list>
  <stack flow="horizontal">
    <label text="length"/>
    <!--<textbox text="({numbers.length})"/>-->
    <textbox text="(5)"/>
  </stack>
</window>
