<?xml version="1.0" encoding="utf-8" ?>
<View xmlns="http://tempuri.org/Markup.xsd" scrollBar="None">
  <HBox>
    <VBox width="50%">
      <Label text="UNDONE"/>
      <List items="{undone}">
        <Label text="{item.name}"/>
      </List>
    </VBox>
    <VBox width="50%">
      <Label text="DONE"/>
      <List items="{done}">
        <Label text="{item.name}"/>
      </List>
    </VBox>
  </HBox>
</View>
