<?xml version="1.0" encoding="utf-8" ?>
<Window xmlns="http://tempuri.org/Markup.xsd" title="Test App" itemsAlign="center" padding="0.5em">
  <Stack width="20em">
    <Label text="TODO APP"/>
    <TextBox name="textbox" placeholder="What to do?" onTextChange="onTextInput"/>
    <List name="list" items="{todos}">
      <Stack flow="horizontal">
        <CheckBox checked="{isDone}" text="{name}" onCheckChange="onDoneToggle"/>
        <Placeholder/>
        <Button key="delete" text="Delete" onClick="onDeleteClick"/>
      </Stack>
    </List>
    <Stack flow="horizontal">
      <Label text="({todos}.filter(function(t){return !t.isDone;}).length + ' items left')"/>
      <!--RadioButtons: All, active, completed.-->
      <Placeholder/>
      <Button name="button_ClearCompleted" text="Clear done" onClick="onClearDoneClick"/>
    </Stack>
  </Stack>
  <Stack width="10em">
    <Label text="Item 0"/>
    <TextBox text="{todos[0].name}" name="tb0"/>
    <CheckBox text="Check" checked="{todos[0].isDone}" name="cb0"/>
  </Stack>
  <Stack width="10em">
    <Label text="Selected"/>
    <TextBox text="{selected.name}" name="tb_selected"/>
    <!--<List items="{todos}">
      <RadioButton item="{}" text="{this.item.name}" selectedItem="{selected}" group="todos" checked="({this.item} == {selected})"/>
    </List>-->
    <RadioButton item="{todos[0]}" text="{todos[0].name}" selectedItem="{selected}"/>
    <RadioButton item="{todos[1]}" text="{todos[1].name}" selectedItem="{selected}"/>
    <RadioButton item="{todos[2]}" text="{todos[2].name}" selectedItem="{selected}"/>
  </Stack>
</Window>
